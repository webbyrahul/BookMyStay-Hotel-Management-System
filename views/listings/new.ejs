<% layout("/layouts/boilerplate")%>
<body>
     <div class="row ">
        <div class="col-8 offset-2">
            <br>
            <h2>Create a New Listing</h2>
            <br>
    <form method="POST" action="/listings">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>  
        <input name="listing[title]" 
        placeholder="Enter Title" 
        type="text" 
        class="form-control"
        />
        <br>
        </div>
        
     <div class="mb-3">
        <label for="description" class="form-label">Description</label>  
        <textarea  name="listing[description]" 
        class="form-control"
        type="text" 
         > 
        </textarea><br>
     </div>
        
     <div>
        <label for="Image" class="form-label">Image</label>  
        <input name="listing[image]" 
        placeholder="Enter Image URL Link"
        class="form-control"
        type="text" /><br>
     </div>
       
     <div class="row">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>  
        <input name="listing[price]" 
        placeholder="Enter Price" 
        class="form-control"
        type="text" />
        <br>
        
        </div>
        <div class="mb-3 col-8" >
        <label for="country" class="form-label">Country</label>  
        <input name="listing[country]"
        placeholder="Enter Country"
        class="form-control"
        type="text" /><br>
        </div>
    </div>

    <div>
        <label for="location" class="form-label">Location</label>  
        <input name="listing[location]"
        placeholder="Enter Location"
        class="form-control"
        type="text" /><br>
    </div>
       
        <button class="btn btn-dark add-btn ">Add Listing</button>
    </form>
    
    </div>
    </div>
</body>
</html>
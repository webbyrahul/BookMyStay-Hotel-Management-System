<% layout("/layouts/boilerplate")%>
<body>
    <h1>Edit the listing</h1>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <input name="listing[title]" value="<%=listing.title%>" type="text" />
        <br>
        <textarea name="listing[description]"><%=listing.description%>   ></textarea><br>
        <input name="listing[image]" value="<%=listing.image%>" type="text" /><br>
        <input name="listing[price]" value="<%=listing.price%>" type="text" /><br>
        <input name="listing[country]" value="<%=listing.country%>" type="text" /><br>
        <input name="listing[location]" value="<%=listing.location%>" type="text" /><br>
        <button>Edit Listing</button>
    </form>
</body>
</body>
